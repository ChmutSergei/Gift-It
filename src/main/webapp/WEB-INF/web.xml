<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--<error-page>-->
    <!--<exception-type>java.lang.Exception</exception-type>-->
    <!--<location>/errors/error.jspx</location>-->
    <!--</error-page>-->
    <jsp-config>
        <taglib>
            <taglib-uri>http://chmut.by/gift-it/ns/tags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>
    <filter>
        <filter-name>encodingfilter</filter-name>
        <filter-class>by.chmut.giftit.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>localizationfilter</filter-name>
        <filter-class>by.chmut.giftit.filter.LocalizationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>authorizationfilter</filter-name>
        <filter-class>by.chmut.giftit.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>localizationfilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>authorizationfilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
</web-app>